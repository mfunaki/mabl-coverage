# デフォルトの挙動 - すべてのテキストファイルをLFに統一
* text=auto eol=lf

# ---------------------------------------------------
# Linux/Docker/CI で実行・解析されるファイルは
# Windows上でも強制的に LF (eol=lf) にする
# ---------------------------------------------------

# シェルスクリプト (最重要)
*.sh        text eol=lf
*.bash      text eol=lf
*.zsh       text eol=lf

# Docker関連
Dockerfile  text eol=lf
Dockerfile.* text eol=lf
Containerfile text eol=lf
.dockerignore text eol=lf

# YAMLファイル (Docker Compose, k8s, CI/CD, configs)
*.yml       text eol=lf
*.yaml      text eol=lf

# 設定ファイル・コード類
*.json      text eol=lf
*.toml      text eol=lf
*.xml       text eol=lf
*.ini       text eol=lf
*.conf      text eol=lf
*.config    text eol=lf

# ドキュメント
*.md        text eol=lf
*.txt       text eol=lf
*.adoc      text eol=lf
*.rst       text eol=lf

# Web関連
*.html      text eol=lf
*.htm       text eol=lf
*.css       text eol=lf
*.scss      text eol=lf
*.sass      text eol=lf
*.less      text eol=lf

# JavaScript/TypeScript
*.js        text eol=lf
*.mjs       text eol=lf
*.cjs       text eol=lf
*.ts        text eol=lf
*.tsx       text eol=lf
*.jsx       text eol=lf
*.vue       text eol=lf

# Python
*.py        text eol=lf
*.pyi       text eol=lf
*.pyw       text eol=lf
requirements*.txt text eol=lf
*.cfg       text eol=lf

# Dart/Flutter
*.dart      text eol=lf
pubspec.yaml text eol=lf
pubspec.lock text eol=lf

# Git関連
.gitignore  text eol=lf
.gitattributes text eol=lf
.gitmodules text eol=lf

# CI/CD
.gitlab-ci.yml text eol=lf
.travis.yml text eol=lf
azure-pipelines.yml text eol=lf
Jenkinsfile text eol=lf

# その他の設定ファイル
.editorconfig text eol=lf
.eslintrc* text eol=lf
.prettierrc* text eol=lf
*.env       text eol=lf
.env.*      text eol=lf
*.properties text eol=lf

# ---------------------------------------------------
# バイナリファイル (念のため明示)
# ---------------------------------------------------
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.jar binary
*.zip binary
*.tar binary
*.gz binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary